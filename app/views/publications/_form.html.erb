<%= form_for(@publication) do |f| %>
  <% if @publication.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@publication.errors.count, "error") %> prohibited this publication from being saved:</h2>

      <ul>
      <% @publication.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :journal %><br>
    <%= f.text_field :journal, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :authors %><br>
    <%= f.text_area :authors, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :details %><br>
    <%= f.text_area :details, class: "form-control", rows: "2" %>
  </div>
  <div class="field">
    <%= f.label :abstract %><br>
    <%= f.text_area :abstract, class: "form-control", rows: "4" %>
  </div>
  <div class="field" style="width:75px">
    <%= f.label :rank %><br>
    <%= f.number_field :rank, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "Add Publication", class: "btn btn-primary" %>
  </div>
<% end %>
