<h2>Referees</h2>
<hr>

<% @referees.each do |referee| %>
  <div style="margin-top:20px;margin-botoom:20px; width:100%; background:#EEEEEE;border-radius:10px">
    <h3><%= link_to referee.name, referee %></h3>
    <%= referee.title %><br>
    <div style="font-size:9px">
      <ul style="list-style-type:none;font-size:9px;margin:0;padding:0;">
        <li style="float:left;margin-left:2px"><a href="mailto:<%= referee.email%>">Contact <%= referee.gender == 0 && "him" || "her" %></a></li>
        <li style="margin-left:60px"><a href="<%= referee.personal_page %>">Browse Personnal page</a></li>
      </ul>
    </div>
  </div>
<% end %>

<br>

<% if signed_in? %>
  <%= button_to 'Add Referee', new_referee_path, :class => "btn", :method => :get%>
<% end %>

<br>
