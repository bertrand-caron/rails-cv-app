<% content_for :title, controller_name.capitalize + ": " +  @referee.name %>


<p id="notice"><%= notice %></p>

  <h2><%= @referee.name %></h2>
  <hr>

<div style="float:right">
	<img style="margin-bottom:20px;max-height:200px;border-radius:50%" src="<%= @referee.thumbnail_img%>">
</div>

<p>
  <strong>Email:</strong>
  <%= @referee.email %>
</p>

<p>
  <strong>Title:</strong>
  <%= @referee.title %>
</p>

<p>
  <strong>Personal Page:</strong>
  <%= @referee.personal_page %>
</p>

<% if signed_in? %>
  <br>
  <div class="panel panel-info" style="clear:both">
    <div class="panel-heading">
      Admin Settings
    </div>
    <div class="panel-body">
      <p>
        <strong>Rank:</strong>
        <%= @referee.rank %>
      </p>
      <p>
        <strong>Gender:</strong>
        <%= @referee.gender %>
      </p>
      <p>
        <strong>Thumbnail Image Link:</strong>
        <%= @referee.thumbnail_img %>
      </p>
    </div>
  </div>
  <%= link_to 'Edit', edit_referee_path(@referee) %> |
  <%= link_to 'Destroy', @referee, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>

<%= link_to 'Back', referees_path %>
