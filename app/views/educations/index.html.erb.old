<% content_for(:title, 'Education') if @set_title %>

<div style="margin-left:25px" >
  <h2 style="color:#F09819;">
  <span style="font-size:30px" onclick="toggle_section('#education_content',this)"><i class="fa fa-caret-down"></i></span>
  Education
  </h2>
  <hr style="margin-top:0px;clear:left">
  
  <div id='education_content'>
  <% @educations.each do |education| %>
    <div class='education-item' style="margin-top:20px; width:100%; background:#EEEEEE;border-radius:10px;padding:20px" onmouseover="show_edit_tools(this)" onmouseout="hide_edit_tools(this)">
      <div style="width:100%; overflow: hidden">
        <div style="width:90%;float:left">
          <%= link_to education.institution, education %>
          <% if signed_in? %>
          <span class="edit-tools" style="padding-left:10px;font-size:14px;vertical-align:topl;display:none"><%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_education_path(education) %></span>
          <span class="edit-tools" style="padding-left:2px;font-size:14px;vertical-align:topl;display:none"><%= link_to '<i class="fa fa-close"></i>'.html_safe, education, method: :delete, data: { confirm: 'Are you sure?' } %></span>
          <% end %>
        </div>
        <div style="float:right;padding-right:10px">
       <b><%= education.institution_location %></b>
        </div>
      </div>
      <div style="width:100%; overflow: hidden">
        <div style="float:left">
          <i><%= education.degree %></i>
        </div>
        <div style="float:right;padding-right:10px">
          <i><%= education.year %></i>
        </div>
      </div>
      <div style="width:80%">
        <%= raw education.description%>
      </div>
    </div>
  <% end %>
  
  <br>
  
  <% if signed_in? %>
    <%= button_to 'Add Education Step', new_education_path, :class => "btn", :method => :get %>
  <% end %>

  </div><!-- End of education_content-->
</div>

