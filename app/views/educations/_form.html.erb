<%= form_for(@education) do |f| %>
  <% if @education.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@education.errors.count, "error") %> prohibited this education from being saved:</h2>

      <ul>
      <% @education.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :institution %><br>
    <%= f.text_field :institution, class: "form-control", placeholder: "Ex: University of Sao Paulo, Brazil" %>
  </div>
  <div class="field">
    <%= f.label :institution_location %><br>
    <%= f.text_field :institution_location, class: "form-control", placeholder: "Ex: Paris (France)" %>
  </div>
  <div class="field">
    <%= f.label :degree %><br>
    <%= f.text_field :degree, class: "form-control", placeholder: "Ex: Bachelor of Science in Physics" %>
  </div>
  <div class="field">
    <%= f.label :year %><br>
    <%= f.text_field :year, class: "form-control", placeholder: "Ex: 2011-2013" %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control", rows: "4", placeholder: "NB: HTML tags are allowed here, such as <br> for a line break." %>
  </div>
  <div class="field" style="width:75px">
    <%= f.label :rank %><br>
    <%= f.number_field :rank, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "Add Education", class: "btn btn-primary" %>
  </div>
<% end %>
