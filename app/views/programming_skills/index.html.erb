<% content_for(:title, 'Programming Skills') if @set_title %>

<div style="margin-left:25px">
  <h2 style="color:#F09819">Programming Skills
  <span style="float:right" onclick="$('#programming_skills_content').toggle('slow');$(this).find('i').toggleClass('fa-caret-right');$(this).find('i').toggleClass('fa-caret-down')"><i class="fa fa-caret-down"></i></span>
  </h2>
  <hr style="margin-top:0px">

  <div id='programming_skills_content'>
  <% @programming_skills.each do |skill| %>
    <div style="margin-top:7px; width:100%; background:#EEEEEE;border-radius:10px;padding:7px" onmouseover="show_edit_tools(this)" onmouseout="hide_edit_tools(this)">
      <div style="float:left">
        <b><%= link_to skill.title, skill %></b>
         <p style="color:#428bca;float:right;margin-left:20px;font-size:18px">
           <%= raw (1..5).reduce(""){|acc,e| acc + "<i class='fa fa-star" + (e <= skill.ranking ? '' : '-o') + "'></i>"} %>
          <% if signed_in? %>
          <span style="padding-left:10px;font-size:14px;vertical-align:top;display:none"><%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_programming_skill_path(skill) %></span>
          <span style="padding-left:2px;font-size:14px;vertical-align:top;display:none"><%= link_to '<i class="fa fa-close"></i>'.html_safe, skill, method: :delete, data: { confirm: 'Are you sure?' } %></span>
          <% end %>
         <p>
      </div>
      <div align="right">
        <%= raw skill.description %>
      </div>
    </div>
  <% end %>

  <br>

  <% if signed_in? %>
    <%= button_to 'Add Programming Skill', new_programming_skill_path, :class => "btn", :method => :get %>
  <% end %>

  </div><!-- End of programming_skills_content-->
</div>
