- content_for :title, controller_name.humanize + ": " +  @programming_skill.title
%p#notice= notice
%div{:style => "margin:0 75px"}
  %h1
    = @programming_skill.title
    = "Programming Language" if @programming_skill.skill_type == 0
  %hr/
  %div{:style => "margin-left:50px"}
    %p
      %strong Description:
      = raw @programming_skill.description
    %hr/
    %h3 Details
    .markdown-jumbotron{:style => "background:#EEEEEE;border-radius:10px;padding:10px; margin-top:10px"}
      = markdown(@programming_skill.details)
    - if signed_in?
      %br/
      .panel.panel-info
        .panel-heading
          Admin Settings
        .panel-body
          %p
            %strong Skill Type:
            = @programming_skill.skill_type
          %p
            %strong Hyperlink:
            = @programming_skill.hyperlink
          %p
            %strong Icon:
            = @programming_skill.icon
          %p
            %strong Rank:
            = @programming_skill.rank
    %p
      %strong Ranking:
      = star_tag @programming_skill
= link_to 'Edit', edit_programming_skill_path(@programming_skill)
|
\#{link_to 'Back', programming_skills_path}
