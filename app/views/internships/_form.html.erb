<%= form_for(@internship) do |f| %>
  <% if @internship.errors.any? %>
    <div class="panel panel-danger">
      <div class='panel-heading'><%= pluralize(@internship.errors.count, "error") %> prohibited this internship from being saved:</div>
      <ul>
      <% @internship.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div><%= f.label :title %></div>
    <%= f.text_field :title, class: "form-control", placeholder: 'Ex: The Influence of Probabilistic Methodologies on Networking' %>
    <p class='help-block'><b>Tip</b> For better rendering, try to keep the title a little less than on-line long.</p>
  </div>
  <%= render :partial => 'pages/hyperlink_form_field', :locals => {:f => f} %>
  <%= render :partial => 'pages/description_form_field', :locals => {:f => f} %>
  <div class="field">
    <div><%= f.label :report_path %></div>
    <%= f.text_field :report_path, class: "form-control", placeholder: "Ex: /uploads/IBPC-2012.pdf" %>
    <p class='help-block'><b>Optionnal</b> If you uploaded a file (Ex: Report), you can have a link to it displayed a the bottom of the item.</p>
  </div>
  <div class="field">
    <div><%= f.label :laboratory %></div>
    <%= f.text_field :laboratory, class: "form-control", placeholder: "Laboratory Acronym (Laboratory Full Name)" %>
  </div>
  <div class="field">
    <div><%= f.label :location %></div>
    <%= f.text_field :location, class: "form-control", placeholder: "City (Country)" %>
  </div>
  <div class="field">
    <div><%= f.label :duration %></div>
    <%= f.text_field :duration, class: "form-control", placeholder: "Ex: Feb 2011-July 2011" %>
  </div>
  <%= render :partial => 'pages/rank_form_field', :locals => {:f => f} %>
  <div class="field field-referee">
    <div><%= f.label :referee_id %></div>
    <%= f.select :referee_id, @referee_hash, {}, class: "form-control" %>
    <p class='help-block'><b>Optionnal</b> If you added your supervisor for this position as a <a href=/referees>referee</a>, select it here. If you didn't, you can always add it later.</p>
  </div>
  <div class="actions">
    <%= f.submit "Add Internship", class: "btn btn-primary"%>
  </div>
<% end %>
