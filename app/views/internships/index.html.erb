<% content_for(:title, 'Internships') if @set_title %>

<div style="margin-left:25px">
  <h2 style="color:#F09819">Internships</h2>
  <hr style="margin-top:0px">
  
  <% @internships.each do |internship| %>
    <div style="margin-top:20px; width:100%; background:#EEEEEE;border-radius:10px;padding:10px 10px 0 10px" onmouseover="show_edit_tools(this)" onmouseout="hide_edit_tools(this)">
      <div style="width:100%; overflow: hidden">
        <div style="width:80%;float:left">
          <b><%= link_to internship.title, internship %></b>
          <%= link_to "Supervisor: "+Referee.find(internship.referee_id).name, "#"+Referee.find(internship.referee_id).name.gsub(" ","") %>
          <% if signed_in? %>
          <span style="padding-left:10px;font-size:14px;vertical-align:top;display:none"><%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_internship_path(internship) %></span>
          <span style="padding-left:2px;font-size:14px;vertical-align:top;display:none"><%= link_to '<i class="fa fa-close"></i>'.html_safe, internship, method: :delete, data: { confirm: 'Are you sure?' } %></span>
          <% end %>
        </div>
        <div style="float:right">
       <b><%= internship.location %></b>
        </div>
      </div>
      <div style="width:100%; overflow: hidden">
        <div style="float:left">
          <i><%= internship.laboratory %></i>
        </div>
        <div style="float:right">
          <i><%= internship.duration %></i>
        </div>
      </div>
      <div style="width:80%">
        <%= raw internship.description%>
      </div>
      <% if not internship.report_path.empty? %>
      <div style="font-size:9px">
        <%= link_to "View Report (PDF)", internship.report_path %>
      </div>
      <% end %>
    </div>
  <% end %>
  
  <br>
  
  <% if signed_in? %>
    <%= button_to 'Add Internship', new_internship_path, :class => "btn", :method => :get %>
  <% end %>
</div>
