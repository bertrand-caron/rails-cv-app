<% content_for(:title, 'Awards') if @set_title %>

<div style="margin-left:25px">
  <h2 style="color:#F09819">Awards
  <span style="float:right" onclick="$('#awards_content').toggle('slow');$(this).find('i').toggleClass('fa-caret-right');$(this).find('i').toggleClass('fa-caret-down')"><i class="fa fa-caret-down"></i></span>
  </h2>
  <hr style="margin-top:0px">

  <div id='awards_content'>
  <% @awards.each do |award| %>
    <div style="margin-top:20px; width:100%; background:#EEEEEE;border-radius:10px;padding:10px 10px 10px 10px" onmouseover="show_edit_tools(this)" onmouseout="hide_edit_tools(this)" >
      <div style="width:100%; overflow: hidden">
        <div style="width:80%;float:left">
          <b><%= link_to award.title, award %></b>
          <% if signed_in? %>
          <span style="padding-left:10px;font-size:14px;vertical-align:top;display:none"><%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_award_path(award) %></span>
          <span style="padding-left:2px;font-size:14px;vertical-align:top;display:none"><%= link_to '<i class="fa fa-close"></i>'.html_safe, award, method: :delete, data: { confirm: 'Are you sure?' } %></span>
          <% end %>
        </div>
        <div style="float:right">
       <b><%= award.location %></b>
        </div>
      </div>
      <div style="width:100%; overflow: hidden">
        <div style="float:left">
        <%= raw award.description%>
        </div>
        <div style="float:right">
          <i><%= award.time %></i>
        </div>
      </div>
    </div>
  <% end %>

  <br>

  <% if signed_in? %>
    <%= button_to 'Add Award', new_award_path, :class => "btn", :method => :get %>
  <% end %>

  </div><!-- End of awards_content-->
</div>
